<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/ntLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">



        <EditText
            android:id="@+id/editTextFood"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Enter food name"
            android:inputType="textAutoComplete"
            android:padding="7dp" />

        <EditText
            android:id="@+id/editTextQty"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Enter quantity in(g)"
            android:inputType="number"
            android:padding="7dp" />


        <Button
            android:id="@+id/add"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:background="#58C95C"
            android:text="Add"
            android:textColor="#ffffff" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
        android:id="@+id/chartViewPager"
        android:layout_width="280dp"
            android:layout_gravity="center"
        android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dotsContainer"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/delete"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:background="#CE0529"
            android:text="Delete"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/viewLineGraph"
            android:layout_width="280dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="35dp"
            android:background="#A62ABD"
            android:text="View Line Graph"
            android:textColor="#ffffff" />
    </LinearLayout>



</LinearLayout>
